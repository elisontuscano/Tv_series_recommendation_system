                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:id="@+id/showSuggestions"
                />
            <HorizontalScrollView
